{
	"dependencies": {
		"npm-run-all": "^4.1.5"
	},
	"scripts": {
		"start-dev": "npm-run-all --parallel start-app start-api",
		"start-app": "cd app/ && npm run dev",
		"start-api": "cd api/ && nodemon server.js",
		"install-all": "npm-run-all --parallel install-root install-frontend install-backend",
		"install-root": "cd ./ && npm install",
		"install-frontend": "cd ./app && npm install",
		"install-backend": "cd ./api && npm install"
	}
}
